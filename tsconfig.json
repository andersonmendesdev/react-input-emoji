{
  "compilerOptions": {
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES6"
  },
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["./node_modules", "**/*.spec.ts", "__mocks__"]
}
